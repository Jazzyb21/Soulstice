@model IEnumerable<Soulstice.DATA.EF.Reservation>

@{
    ViewBag.Title = "Reservation";
}

<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Add New Reservation", "Create")
    </p>
    <table class="table" id="table_id">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GymMember.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class.ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class.WeekDay.DayOfWeek)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class.Fee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateSubmitted)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GymMember.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.WeekDay.DayOfWeek)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.Fee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateSubmitted)
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <span style="font-size: 1.5em;">
                                <a style=" color: red;" href="@Url.Action("Delete", "Reservations", new{ id = item.ReservationID })" title="Delete" alt="Delete">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section scripts {
    <script>
            $(document).ready(function () {
                $('#table_id').DataTable();
            });
    </script>
}