@model Soulstice.DATA.EF.Reservation

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="contentContainer">
        <h2 class="text-center mb-50">@ViewBag.Title</h2>
        <div id="contentLeft">
            <p><strong>@Html.DisplayNameFor(model => model.GymMember.FullName):</strong> @Html.DisplayFor(model => model.GymMember.FullName)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Class.ClassName):</strong> @Html.DisplayFor(model => model.Class.ClassName)</p>
        </div>
        <div id="contentRight">
            <p> <strong>@Html.DisplayNameFor(model => model.Class.WeekDay.DayOfWeek):</strong> @Html.DisplayFor(model => model.Class.WeekDay.DayOfWeek)</p>
            <p> <strong>@Html.DisplayNameFor(model => model.DateSubmitted):</strong> @Html.DisplayFor(model => model.DateSubmitted)</p>
        </div>
        <div class="clearfix"></div>
        <p id="footerLeft"> @Html.ActionLink("Back to Reservations", "Index")</p>
        <p id="footerRight">
            <input type="submit" value="Delete" class="btn btn-default" />
        </p>


        <div class="clearfix"></div>
    </div>


}
