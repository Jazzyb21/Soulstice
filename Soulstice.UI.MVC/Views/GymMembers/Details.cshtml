@model Soulstice.DATA.EF.GymMember

@{
    ViewBag.Title = "Details for " + Model.FullName;
}


<div id="contentContainer">
    <h2 class="text-center mb-50">@ViewBag.Title</h2>
    <div id="contentLeft">
        <img class="profileImage img-thumbnail border-00" src="~/Content/img/@Model.ProfilePic" alt="@Model.FullName" />
        <p><strong>@Html.DisplayNameFor(model => model.FullName):</strong> @Html.DisplayFor(model => model.FullName)</p>
        <p><strong>@Html.DisplayNameFor(model => model.AspNetUser.Email):</strong> @Html.DisplayFor(model => model.AspNetUser.Email)</p>
    </div>
    <div id="contentRight">
        <p> <strong>@Html.DisplayNameFor(model => model.City):</strong> @Html.DisplayFor(model => model.City)</p>
        <p><strong>@Html.DisplayNameFor(model => model.State):</strong> @Html.DisplayFor(model => model.State)</p>
        <p><strong>@Html.DisplayNameFor(model => model.Phone):</strong> @Html.DisplayFor(model => model.FormattedPhone)</p>
        <p><strong>@Html.DisplayNameFor(model => model.GoalDescription):</strong>  @Html.DisplayFor(model => model.GoalDescription)</p>
    </div>
    <div class="clearfix"></div>
    <p id="footerLeft"> @Html.ActionLink("Back to Members", "Index")</p>

    
    <p id="footerRight"> @Html.ActionLink("Edit", "Edit", new { id = Model.GymID })</p>
    
    <div class="clearfix"></div>
</div>

