@model Soulstice.UI.MVC.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit " + Model.Email;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="contentContainer">
        <div id="editContainer">
            <h2 class="text-center">@ViewBag.Title</h2>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <strong>
                        @Html.Label("Roles", new { @class = "control-label col-md-1" })
                    </strong>
                    <span class=" col-md-10">
                        @foreach (var item in Model.RolesList)
                        {
                            <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        }
                    </span>
                </div>
                <div class="form-group">
                    <p id="footerLeft">  @Html.ActionLink("Back to Users", "Index")</p>
                    <p id="footerRight"> <input type="submit" value="Save" class="btn btn-default" /></p>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
