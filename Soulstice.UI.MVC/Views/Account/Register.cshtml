<section class="roberto-about-area section-padding-100-0">

    <!-- Hotel Search Form Area -->
    <div class="hotel-search-form-area" id="registerContainer">
        <div class="container-fluid">
            <div class="hotel-search-form">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h2 class="text-center mb-30">@ViewBag.Title</h2>
                    <div class="row  justify-content-center">

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "First Name" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Last Name" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "City" })
                        </div>


                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "State" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Phone" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Goal Description" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Profile Picture" })
                        </div>

                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>

                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>

                    </div>

                    <div class="row" id="registerBtn">
                        <div class="col-md-3 justify-content-center">
                            <input type="submit" value="Register" class="form-control btn roberto-btn" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


