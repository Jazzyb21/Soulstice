@model Soulstice.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}


<div class="breadcrumb-area contact-breadcrumb bg-img bg-overlay jarallax" style="background-image: url(../Content/img/bruce-mars.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content text-center mt-100">
                    <h2 class="page-title">Contact Us</h2>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->
<!--Contact Info Area Start -->
<section class="google-maps-contact-info">
    <div class="container-fluid">
        <div class="google-maps-contact-content">
            <div class="row">
                <!-- Single Contact Info -->
                <div class="col-6 col-lg-3">
                    <div class="single-contact-info">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                        <h4>Phone</h4>
                        <p>(123) 456-1230</p>
                    </div>
                </div>
                <!-- Single Contact Info -->
                <div class="col-6 col-lg-3">
                    <div class="single-contact-info">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        <h4>Address</h4>
                        <p>Iris Watson, 283 Fusce Rd,NY</p>
                    </div>
                </div>
                <!-- Single Contact Info -->
                <div class="col-6 col-lg-3">
                    <div class="single-contact-info">
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                        <h4>Open time</h4>
                        <p>5:00 AM to 11:00PM</p>
                    </div>
                </div>
                <!-- Single Contact Info -->
                <div class="col-6 col-lg-3">
                    <div class="single-contact-info">
                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        <h4>Email</h4>
                        <p style="overflow-wrap: break-word;">jasmyne.boggs@@outlook.com</p>
                    </div>
                </div>
            </div>
            <div class="roberto-contact-form-area">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <!-- Section Heading -->
                            <div class="section-heading text-center wow fadeInUp" data-wow-delay="100ms">
                                <h6>Contact Us</h6>
                                <h2>Leave Message</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <!-- Form -->
                            <div class="roberto-contact-form">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="col-12 col-lg-6 wow fadeInUp" data-wow-delay="100ms">
                                            @*<input type="text" name="message-name" class="form-control mb-30" placeholder="Your Name">*@
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-30", placeholder = "Your Name" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-12 col-lg-6 wow fadeInUp" data-wow-delay="100ms">
                                            @*<input type="email" name="message-email" class="form-control mb-30" placeholder="Your Email">*@
                                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control mb-30", placeholder = "Subject" } })
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-12 col-lg-12 wow fadeInUp" data-wow-delay="100ms">
                                            @*<input type="email" name="message-email" class="form-control mb-30" placeholder="Your Email">*@
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control mb-30", placeholder = "Your Email" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-12 wow fadeInUp" data-wow-delay="100ms">
                                            @*<textarea name="message" class="form-control mb-30" placeholder="Your Message"></textarea>*@
                                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control mb-30", placeholder = "Your Message" } })
                                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-12 text-center wow fadeInUp" data-wow-delay="100ms">
                                            <button type="submit" class="btn roberto-btn mt-15">Send Message</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}