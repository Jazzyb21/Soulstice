<!-- About Us Area Start -->
@if (Request.IsAuthenticated && User.IsInRole("Member"))
{



    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section class="roberto-about-area section-padding-100-0">
            <!-- Hotel Search Form Area -->
            <div class="hotel-search-form-area">
                <div class="container-fluid">
                    <div class="hotel-search-form">
                        <h2 class="text-center" style="margin-bottom: 1.5em;">@ViewBag.GymMember</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="offset-2 col-md-8">
                                @Html.DropDownList("Classid", null, "Select a Class - Fee Due at Time of Class", htmlAttributes: new { @class = "form-control" })
